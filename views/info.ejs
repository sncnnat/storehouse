        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
        integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
        integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <style>
        .jumbotron {
            background-color: #8EC5FC;
            background-image: linear-gradient(62deg, #8EC5FC 0%, #E0C3FC 100%);


        }
    </style>
</head>

<body>
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">‚ù§ Update info</h1>
            <p class="lead"><b>New employee have to write information below</b></p>

        </div>
    </div>
    <div class="container">
        <div class="card mt-3">
            <div class="card-header">
                <h3>Update employee's information</h3>
            </div>
            <div class="card-body">

                <form action="" method="post" class="form-group">
                    <label for="">Name</label>
                    <input class="form-control" type="text" name="title" value="<%= foundFood.name %>">
                    <label for="">Gender</label>
                    <input class="form-control" type="text" name="gender" value="<%= foundFood.gender %>">
                    <label for="">Age</label>
                    <input class="form-control" type="number" name="age" value="<%= foundFood.age %>">
                    <div class="row justify-content-end"><button type="submit"
                            class="btn btn-lg btn-primary mt-3 mr-3">Update</button></div>

                </form>
            </div>
        </div>
    </div>

</body>

</html>