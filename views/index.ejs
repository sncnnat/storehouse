    <style>
        

        .jumbotron {
            background-color: #8EC5FC;
            background-image: linear-gradient(62deg, rgb(255, 170, 170) 0%, rgb(220, 182, 255) 100%);


        }

        h5 {
            display: inline;
        }
    </style>
</head>

<body style = "background-color:rgb(165, 165, 165)">
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <center>
            <h1 class="display-4">üè≠ S T O R E H O U S E</h1>

            <p class="lead"><b>Employee's information store in here!</b></p>
        </center>
        </div>
    </div>


    <div class="container mt-3">
            <h1>EMPLOYEE's INFORMATION</h1>
            <hr>
            <div class="row">
                <% if(foods.length === 0) { %>
                <h3 class="ml-3 mb-3">‚ùóÔ∏èPlease fill in regitration form ‚ùó</h3>
                <% }else { %>
                <% foods.forEach(food => { %>
                
                    <div style = "margin-left : 20px" class="card ">
                        <h5 class="card-header">Name: <%= food.title %></h5>
                        <div class="card-body">
                            <p class="card-text">Surname: <%= food.detail %></p>
                            <p class="card-text">Age: <%= food.cost %></p>
                            <div class="row justify-content-around ">
                                <form action="/foods/<%= food._id %>" method="get">
                                    <button class="btn btn-md btn-success" type="submit">‚úîÔ∏è Update</button>
                                </form>
                                <form action="/foods/delete/<%= food._id %>" method="post">
                                    <button class="btn btn-md btn-danger" type="submit">‚úñÔ∏è Delete</button>
                                </form>
    
    
                            </div>
                        </div>
    
    
                    </div>
    
                    <%   }); }%>
    
                </div>
    
            </div>
    
        </div>

    <div class="container">


            <br><div class="card">
                <div style = "background-color:rgb(0, 0, 0)" class="card-header">
                    <br><h2 style="color:white">Insert employee's information</h2><br>
                </div>

                <div style = "background-color:rgb(255, 212, 204)"class="card-body">
                    <form action="/foods" method="post" class="form-group">
                        <label for="" class="mt-1">Name:</label>
                        <input class="form-control" type="text" name="title" required>
                        <label for="" class="mt-1">Surname:</label>
                        <input class="form-control" type="text" name="detail" required>
                        <label for="" class="mt-1">Age:</label>
                        <input class="form-control" type="number" name="price" min="0" required>
                        <button style = "background-color:rgb(238, 198, 87)"class=" btn btn-lg mt-3" type="submit">INSERT</button>
                    </form>
                </div>

            </div><br>
        </div>
    </div>



</body>

</html>